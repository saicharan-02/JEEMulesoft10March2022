<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
	<persistence-unit name="JPA-PU" transaction-type="RESOURCE_LOCAL">		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/batch10db" />
			<property name="javax.persistence.jdbc.user" value="batch10" />
			<property name="javax.persistence.jdbc.password" value="batch10" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
		</properties>
	</persistence-unit>
	
</persistence>